<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/item_small_radius"
    app:cardElevation="@dimen/card_no_elevation"
    android:layout_marginHorizontal="@dimen/button_horizontal_space"
    tools:cardBackgroundColor="@color/button_second">

    <FrameLayout
        android:id="@+id/button_click_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/SingleLine"
            android:padding="@dimen/button_content_space"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/button_text"
            android:textStyle="bold"
            tools:text="@string/button_first" />

        <ImageView
            android:id="@+id/button_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:alpha="0.25"
            android:scaleType="centerCrop"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>